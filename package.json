{
  "name": "root",
  "private": true,
  "packageManager": "yarn@3.4.1",
  "workspaces": [
    "packages/arancini-core",
    "packages/arancini",
    "packages/arancini-react",
    "packages/benchmarks"
  ],
  "scripts": {
    "build": "yarn workspaces foreach run build",
    "test": "yarn workspaces foreach run test",
    "bench": "yarn workspace benchmarks run bench",
    "change": "yarn changeset",
    "version": "yarn changeset version && yarn install --mode update-lockfile",
    "release": "yarn build && yarn test && yarn build-storybook && changeset publish",
    "build-storybook": "concurrently \"cd ./packages/arancini-core && yarn build-storybook\" \"cd ./packages/arancini-react && yarn build-storybook\"",
    "storybook": "concurrently \"cd ./packages/arancini-core && yarn storybook\" \"cd ./packages/arancini-react && yarn storybook\""
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "concurrently": "^7.4.0"
  }
}
